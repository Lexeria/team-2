{
	"env": {
		"browser": true,
		"es2021": true,
		"node": true
	},
	"extends": ["google"],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"plugins": ["@typescript-eslint"],
	"rules": {
		"indent": ["error", "tab"],
		"linebreak-style": ["error", "unix"],
		"no-tabs": ["error", { "allowIndentationTabs": true }],
		"semi": ["error", "never"],
		"quotes": ["error", "double"],
		"no-unused-vars": "warn",
		"new-cap": "warn"
	}
}
